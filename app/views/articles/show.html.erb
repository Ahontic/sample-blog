<h1><%=  @article.title %> </h1>
<p>
	<%= @article.text %>

</p>
<hr/>


<% @article.comments.each do |comment| %>
	<h4> 
		Author:&nbsp<%= comment.author %>
	 </h4>
	 
	 <p>
	 	<h5>
	 	Text:
	 	<p><%= comment.body %></p>
	 </h5>
	 </p>
	 <hr/>
	 <% end %>

<%= form_for([@article, @article.comments.build]) do |f| %>
	<p>
		<%= f.label :author %><br/>
		<%= f.text_field :author %>

	
	<p>
		<%= f.label :body %><br/>
		<%= f.text_area :body %>

	</p>
	<p>
		<%= f.button "Add comment" %>

	</p>
	
	</p>
<% end %>
<% end %>
<%= link_to 'Back', articles_path %>