<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path do |f| %>
	<p>
		<%= f.label :name %><br/>
		<%= f.text_field :name %>

	</p>
	<p>
		<%= f.label :phone %><br/>
		<%= f.text_field :phone %>

	</p>
	<p>
		<%= f.label :text %><br/>
		<%= f.text_area :text %>

	</p>
	<p>
		<%= f.button "Send" %>

	</p>

<% end %>