<h1><%= t('contacts.contact_us') %></h1>

<%= form_for :contact, url: contacts_path do |f| %>
		<% if @contact && @contact.errors.any? %>
	<p>
			<ul>
			<%= @contact.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
			</ul>
	</p>
	<% end %>
	<p>
		<%= f.label :name %><br/>
		<%= f.text_field :name %>

	</p>
	<p>
		<%= f.label :phone %><br/>
		<%= f.text_field :phone %>

	</p>
	<p>
		<%= f.label :text %><br/>
		<%= f.text_area :text %>

	</p>
	<p>
		<%= f.button "Send" %>

	</p>

<% end %>